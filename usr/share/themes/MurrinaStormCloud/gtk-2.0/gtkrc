style "theme-default"
{
  GtkButton      ::default_border    = { 0, 0, 0, 0 }
  GtkRange       ::trough_border     = 0
  GtkPaned       ::handle_size       = 6
  GtkRange       ::slider_width      = 15
  GtkRange       ::stepper_size      = 15
  
  GtkScrollbar   ::min_slider_length = 30
  GtkCheckButton ::indicator_size    = 14
  GtkMenuBar     ::internal-padding  = 0
  GtkTreeView    ::expander_size     = 14
  GtkExpander    ::expander_size     = 16
  GtkScale       ::slider-length     = 27
  #GtkToolbar    ::button-relief     = GTK_RELIEF_NORMAL
  #GtkMenuBar    ::shadow-type       = GTK_SHADOW_IN
  #GtkScrollbar  ::has-forward-stepper = 0
  #GtkScrollbar  ::has-backward-stepper = 0
  #GtkScrollbar  ::has-secondary-backward-stepper = 1
  
  xthickness = 1
  ythickness = 1

  fg[NORMAL]		= "#000000"
  fg[ACTIVE]		= "#000000"
  fg[INSENSITIVE]	= "#555555"
  fg[PRELIGHT]		= "#000000"
  fg[SELECTED]		= "#ffffff"

  bg[NORMAL]       	= "#eaeaea"
  bg[ACTIVE]       	= "#eaeaea"
  bg[PRELIGHT]     	= "#ffffff"
  bg[SELECTED]     	= "#4d5062"
  bg[INSENSITIVE]  	= "#e0e0e0"

  base[NORMAL]     	= "#ffffff"
  base[ACTIVE]     	= "#d4d4d4"
  base[PRELIGHT]   	= "#FFFFFF"
  base[SELECTED]	= "#4d5062"
  base[INSENSITIVE]	= "#f4f4f4"

  text[NORMAL]     	= "#000000"
  text[ACTIVE]		= "#505050"
  text[PRELIGHT]   	= "#353535"
  text[SELECTED]   	= "#ffffff"
  text[INSENSITIVE]	= "#9B9B9B"

  engine "murrine" 
  {
	listviewstyle = 0 # 0 = nothing, 1 = dotted
	menuitemstyle = 1 # 0 = flat, 1 = glassy, 2 = striped
	glazestyle = 0 # 0 = flat hilight, 1 = curved hilight, 2 = concave style, 3 = top curved hilight, 4 = beryl style
	scrollbar_color = "#d4d4d4"
    	contrast = 1.5
	menubarstyle = 1 # 0 = flat, 1 = glassy, 2 = gradient, 3 = striped
	menubaritemstyle = 1 # 0 = menuitem look, 1 = button look
	listviewheaderstyle = 1 # 0 = flat, 1 = glassy, 2 = raised
	roundness = 2 # 0 = squared, 1 = old default, more will increase roundness
    	animation = TRUE # FALSE = disabled, TRUE = enabled
	scrollbarstyle = 0 # Enable or disable circles, stripes, handles
  }
}


